---
// Select UI to switch between locales.

import { getLocalePaths, LOCALES } from "src/i18n";
---

<label for="select"> 
  <select data-languageSelect>
    {
      getLocalePaths(Astro.url).map(({ path, lang }) => (
        <option
          label={LOCALES[lang].flag}
          value={path}
          data-lang={lang}
          selected={lang === Astro.currentLocale}
          dir={LOCALES[lang].dir || null}
        />
      ))
    }
  </select>
</label>

<script is:inline>
  const selects = document.querySelectorAll("[data-languageSelect]");

  selects.forEach((select) => {
    select.addEventListener("change", (event) => {
      // used for 404 page
      localStorage.selectedLang = event.target?.selectedOptions[0].dataset.lang;
      location.href = event.target?.value;
    });
  });
</script>

<style>
  label {
    cursor: pointer;
    display: flex;
    align-items: center;
    margin-right: 1rem;
  }

  select {
    all: unset;
    background-color: transparent;
    border: none;
    height: 25px;
    font-size: 25px;
    border-radius: 50%;
    border: solid 2px;
    padding: 0.5rem;
    line-height: 90%;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
  }
  
  select:hover {
    box-shadow: 4px 4px 0 black;
    transform: translateX(-4px);
  }
</style>
